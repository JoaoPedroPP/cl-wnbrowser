{namespace cl-wnbrowser.Templates}

{template stats}

<html>
 <head>
     <link rel="stylesheet" type="text/css" href="/wn/st/theme.css">
 <style>
{literal}

table {
width: 60%;
border-collapse: collapse;
}

td, th {
font-size: 1em;
border: 1px solid #98bf21;
padding: 3px 7px 2px 7px;
}

tr td:first-child { width: 20em; }

td.center { text-align: center; }

th {
text-align: center;
padding-top: 5px;
padding-bottom: 4px;
background-color: #A7C942;
color: #ffffff;
}

tr.alt td {
color: #000000;
background-color: #EAF2D3;
}

{/literal}
 </style>
 </head>
<body>

<h1>Statistics</h1>

<h2>Type count</h2>

<table>
  <tr><th>Type</th><th>Count</ht></tr>
  {foreach $row in $rowscount}
    <tr><td><a href="/wn/search?term=rdf_type:%22wn30:{$row.type}%22">{$row.type}</a></td><td class="center">{$row.count}</td></tr>
  {/foreach}
</table>

<h2>Progress status</h2>

<table>
  <tr><th>Lex name</th><th>Percentage</ht></tr>
  {foreach $row in $rowspercent}
    <tr><td><a href="/wn/search?term=wn30_lexicographerFile:{$row.lexfile}">{$row.lexfile}</a></td><td class="center"><progress value="{$row.percent}" max="100" title="{$row.percent}%" /></td></tr>
  {/foreach}
</table>

<p>[ <a href="/wn/">Home</a> ]</p>

</body>

</html>
{/template}
