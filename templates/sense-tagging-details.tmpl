/** -*- mode: html -*- */

{namespace cl-wnbrowser.Templates}


{template sense-details}
{literal}
<style type='text/css'>
  body, h1, h2, h3, p, ul, li, i
  { 
  font-family: Segoe UI, Verdana, sans-serif; 
  }
  h1 { 
    font-size: 1.5em; 
  }
  fieldset {
  border:0 none;
  }
  .option { width: 20px; }
</style>

<script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
<script type="text/javascript">

  function oneRadioChecked() {
  return ($('input[type=radio]:checked').size() == 1);
  }
  
  function validate(f)
  {
  if (!oneRadioChecked())
  {
  alert("Escolha uma alternativa, por favor.");
  return false;
  }

  return true;
  }
</script>

{/literal}
<p><b>Lemma</b>: {$document.word.lemma}</p>
{if isNonnull($selection)}
<i>Sele&ccedil&atilde;o feita.</i>
{else}
<p><b>Senses</b>:
  <form action="sense-tagging-process-suggestion" onsubmit="return validate(this)">
    <input type="hidden" name="userid" value="{$userid}">
    <input type="hidden" name="file" value="{$file}">
    <input type="hidden" name="text" value="{$text}">
    <input type="hidden" name="word" value="{$word}">
    
    <div class="lista">
      <fieldset>
        {foreach $s in $document.lemma_synsets}
        <input class="option" type="radio" name="selection" value="{$s.id}"><a target="_blank" href="synset?id={$s.id}">{$s.id}</a>
        
        {foreach $w in $s.words}
        {if not isFirst($w)}, {/if}
        {$w}
        {/foreach}
        <ul>
          <li><i>{$s.gloss}</i></li>
        </ul>
        {/foreach}
        <br>
        <input type="radio" name="selection" value="l">Lematiza&ccedil;&atilde;o errada
        <br>
        <input type="radio" name="selection" value="m">Missing sense
        <input type="text" name="comment">
      </fieldset>
    </div>
    {if $userid != ''}
    <p><input type="submit"></p>
    {else}
    <p><i>&Eacute; necess&aacute;rio estar logado para prosseguir...</i></p>
    {/if}
  </form>
</p>
<p>
  <form target="_blank" action="search" method="get">
    <input class="search" type="text" name="term" placeholder="Search ..."/>
    <input class="search" type="submit" value="Search" />
  </form>
</p>
{/if}
{/template}
