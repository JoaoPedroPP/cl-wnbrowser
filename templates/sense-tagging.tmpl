/** -*- mode: html -*- */

{namespace cl-wnbrowser.Templates}

{template sense}

<ul>
  {foreach $text in $document}
  <li><p>{$text.text}</p>
    <p>
      {foreach $word in $text.words}
      {if isNonnull($word.lemma_synsets)}
      
      <a target="sense-tagging-options" href="sense-tagging-details?wordform={$word.wordform}&lemma={$word.lemma}{foreach $s in $word.lemma_synsets}&sense={$s.id}{/foreach}">{$word.wordform}</a>
      {else}
      {$word.wordform}
      {/if}
      {sp}
      {/foreach}
    </p>
  </li>
  {/foreach}

</ul>

{/template}
